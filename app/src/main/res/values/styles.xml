<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimaryDark">#8e2525</item>
        <item name="colorPrimary">#b43232</item>
        <item name="colorAccent">#1d2270</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="NoActionbarTheme" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>



    <style name="MyButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:background">#AD1457</item>
        <item name="android:layout_margin">5dp</item>
    </style>


    <style name="MyText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#F06292</item>
        <item name="android:textSize">23sp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>


    <style name="MyButton.other">
        <item name="android:background">#E91E63</item>
    </style>


    <style name="GreenButton" parent="Theme.AppCompat.Light.NoActionBar">

    </style>

</resources>
